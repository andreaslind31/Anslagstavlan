@page
@model Anslagstavlan.Pages.User.EditModel
@{
}

<div class="text-center">
    <h1 class="mb-2">Hi! @Model.ChatUser.UserName</h1>
    <p class="m-5">This is a site where you will edit your account!</p>
</div>



<img class="img-thumbnail" style="width:200px;" src="~/img/@Model.ChatUser.PhotoPath" asp-append-version="true" />
<hr />
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-sm-12 col-md-12 col-lg-4">
            <form method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ChatUser.ChatUserId" />
                <input type="hidden" asp-for="ChatUser.PhotoPath" />
                <div class="form-group">
                    <label asp-for="ChatUser.UserName" class="control-label"></label>
                    <input asp-for="ChatUser.UserName" class="form-control" />
                    <span asp-validation-for="ChatUser.UserName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="file" asp-for="@Model.Photo" class="form-control-file" accept=".jpg, .jpeg" />
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>